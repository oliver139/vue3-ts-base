{
  "name": "vue3-ts-base",
  "type": "module",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "description": "A nice template for starting a vue-ts project ",
  "author": "Oliver Mak",
  "license": "MIT",
  "homepage": "https://github.com/oliver139/vue3-ts-base",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliver139/vue3-ts-base"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "vite",
    "prepare": "simple-git-hooks && nr build-unplugin",
    "build": "run-p \"build-only {@}\" type-check --",
    "build-only": "vite build",
    "build-unplugin": "nr build-only && rimraf ./dist",
    "preview": "vite preview",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --cache --fix",
    "lint:check": "eslint . --cache",
    "lint:inspect": "eslint --inspect-config",
    "release": "bumpp"
  },
  "dependencies": {
    "@primeuix/themes": "^1.2.5",
    "@vueuse/core": "^14.0.0",
    "pinia": "^3.0.4",
    "primevue": "^4.4.1",
    "tailwindcss-primeui": "^0.6.1",
    "vue": "^3.5.23",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@antfu/ni": "^27.0.1",
    "@iconify/vue": "^5.0.0",
    "@oliver139/eslint-config": "^4.0.0",
    "@primevue/auto-import-resolver": "^4.4.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "lint-staged": "^16.2.6",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "postcss-hexrgba": "^2.1.0",
    "rimraf": "^6.1.0",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^7.2.1",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vue-tsc": "^3.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --cache --fix"
  },
  "browserslist": [
    ">0.3%",
    "defaults",
    "last 5 versions",
    "last 10 Chrome versions",
    "not dead"
  ]
}
