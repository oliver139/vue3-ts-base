{
  "name": "vue3-ts-base",
  "type": "module",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.3",
  "description": "A nice template for starting a vue-ts project ",
  "author": "Oliver Mak",
  "license": "MIT",
  "homepage": "https://github.com/oliver139/vue3-ts-base",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliver139/vue3-ts-base"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "prepare": "simple-git-hooks && nr build-unplugin",
    "build": "run-p \"build-only {@}\" type-check --",
    "build-only": "vite build",
    "build-unplugin": "nr build-only && rimraf ./dist",
    "preview": "vite preview",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --cache --fix",
    "lint:check": "eslint . --cache",
    "lint:inspect": "eslint --inspect-config",
    "release": "bumpp"
  },
  "dependencies": {
    "@vueuse/core": "^12.3.0",
    "pinia": "^2.3.0",
    "vue": "^3.5.13",
    "vue-gtag": "^2.0.1",
    "vue-i18n": "^11.1.2",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@antfu/ni": "^23.2.0",
    "@iconify/vue": "^4.3.0",
    "@oliver139/eslint-config": "^1.1.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "bumpp": "^9.10.0",
    "eslint": "^9.17.0",
    "lint-staged": "^15.3.0",
    "npm-run-all2": "^7.0.2",
    "rimraf": "^6.0.1",
    "sass": "^1.83.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.7.3",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-vue-components": "^28.0.0",
    "vite": "^6.0.12",
    "vite-plugin-vue-devtools": "^7.7.0",
    "vue-tsc": "^2.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --cache --fix"
  },
  "browserslist": [
    ">0.3%",
    "defaults"
  ]
}
