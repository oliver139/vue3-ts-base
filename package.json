{
  "name": "vue3-ts-base",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "prepare": "simple-git-hooks",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --cache --fix",
    "lint:check": "eslint . --cache",
    "lint:inspect": "eslint --inspect-config"
  },
  "dependencies": {
    "@vueuse/core": "^11.3.0",
    "normalize.css": "^8.0.1",
    "pinia": "^2.2.6",
    "vue": "^3.5.13",
    "vue-gtag": "^2.0.1",
    "vue-i18n": "^10.0.4",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@iconify/vue": "^4.1.2",
    "@oliver139/eslint-config": "^1.1.2",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.9.1",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vue/tsconfig": "^0.6.0",
    "eslint": "^9.15.0",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "sass": "^1.81.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.6.3",
    "unplugin-auto-import": "^0.18.5",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.11",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --cache --fix"
  },
  "browserslist": [
    ">0.3%",
    "defaults"
  ]
}
